! General
!urxvt*termName:  rxvt-256color
urxvt*loginShell:         true
urxvt*scrollBar:          true
urxvt*secondaryScroll:    true
urxvt*saveLines:         65535
urxvt*cursorBlink:       false
urxvt*urgentOnBell:       true
!urxvt*override-redirect:false
!urxvt*borderLess:       false
!urxvt*internalBorder:       0
!urxvt*externalBorder:       0

URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

! disable ctrl+shift key
URxvt*iso14755:         false
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! ctrl-left/right bacward/forward word navigation
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! URxvt*keysym.Home: \033[1~
! URxvt*keysym.End: \033[4~

! Extensions
urxvt*perl-lib:        /usr/lib/urxvt/perl/:home/greg/.urxvt/perl/
urxvt*perl-ext-common: default,matcher,searchable-scrollback,clipboard
urxvt*urlLauncher:     /usr/bin/firefox
urxvt*matcher.button:  1
!  - catch ugly URLs
urxvt.cutchars:        `()'*<>[]{|}"

! Appearance
!  - use a bitmap font
! urxvt.font: -*-terminus-medium-*-*-*-*-140-*-*-*-*-iso8859-1
! urxvt.boldfont: -*-terminus-medium-*-*-*-*-140-*-*-*-*-iso8859-1

! arch package: ttf-dejavu
urxvt*font: xft:Deja Vu Sans Mono:antialias=true:pixelsize=14,xft:Inconsolata:antialias=true:pixelsize=16
urxvt*boldfont: xft:Deja Vu Sans Mono:bold:antialias=true:pixelsize=14,xft:Deja Vu Sans Mono:bold:antialias=true:pixelsize=14
! urxvt*font: xft:Inconsolata:antialias=true:pixelsize=16
! urxvt*boldfont: xft:Inconsolata:bold:antialias=true:pixelsize=16

! urxvt.font: xft:Inconsolata:pixelsize=14:antialias=true
! urxvt.boldfont: xft:Inconsolata:bold:pixelsize=14:antialias=true

! urxvt*font:        -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
! urxvt*boldFont:    -xos4-terminus-bold-*-*-*-12-*-*-*-*-*-*-*
!  - use xft for drawing fonts
! urxvt*font:       xft:Terminus:8
!  - cursor
urxvt*cursorColor: #DCDCCC
! urxvt*cursorColor: #e01010

!  - pseudo transparency
!urxvt*shading:    50
!urxvt*transparent:true
!
!  - color scheme
urxvt.background:  #000000
urxvt.foreground:  #EBEBFF
! black + red
!urxvt*color0:     #3f3f3f
urxvt*color0:      #000000
urxvt*color1:      #e01010
! green + yellow
urxvt*color2:      #00AA00
urxvt*color3:      #FFFF00
! blue + purple
urxvt*color4:      #112037
urxvt*color5:      #A020F0
! cyan + white
urxvt*color6:      #5B5BC7
urxvt*color7:      #fefefe
! bright-black + bright-red
urxvt*color8:      #6a6a6a
urxvt*color9:      #FF5555
! bright-green + bright-yellow
urxvt*color10:     #90EE90
urxvt*color11:     #ffff2f
! bright-blue + bright-purple
urxvt*color12:     #5B5BC7
urxvt*color13:     #e628ba
! bright-cyan + bright-white
urxvt*color14:     #7D7DFB
urxvt*color15:     #ffffff
